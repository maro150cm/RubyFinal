<%= form_for(@group) do |f| %>
    <% if @group.errors.any? %>
        <div id="error_explanation">
          <h2><%= @group.errors.count %>個填寫資料錯誤:</h2>

          <ul>
              <% @group.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
          </ul>
        </div>
    <% end %>
    
    <%= f.label "課程名稱" %><br>
    <%= f.text_field :group_name %><br>    
    
    <br/><br/>
    <%= f.submit "新增",class:"btn btn-primary" %> |
    <%= link_to '清單', works_path,class:"btn btn-primary" %>
<% end %>